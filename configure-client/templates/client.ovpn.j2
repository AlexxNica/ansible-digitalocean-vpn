{{ digitalocean_vpn_client_name }}
dev tun
proto udp
remote {{ vpn_droplet.droplet.ip_address }} 1194
remote-cert-tls server
ns-cert-type server

resolv-retry infinite
nobind
persist-key
persist-tun
verb 3

comp-lzo

<ca>
{{ lookup('file', 'openvpn_files/ca.crt') }}
</ca>

<cert>
{{ lookup('file', 'openvpn_files/client.crt') }}
</cert>

<key>
{{ lookup('file', 'openvpn_files/client.key') }}
</key>
