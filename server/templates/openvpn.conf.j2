# {{ ansible_managed }}

dev tun
ifconfig {{ openvpn_server_ip }} {{ openvpn_client_ip }}
secret {{ openvpn_keyfile }}

{% if openvpn_compression is defined and openvpn_compression %}
comp-lzo
{% endif %}

keepalive {{ openvpn_keepalive }}
ping-timer-rem
persist-tun
persist-key

up /usr/local/sbin/do_masquerade
